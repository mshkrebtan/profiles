#cloud-config
users:
  - name: mshkrebtan
    ssh-authorized-keys:
      - ssh-rsa  mshkrebtan@MBA-Maxim
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    groups: sudo
    shell: /bin/bash
packages:
  - git
  - vim
runcmd:
  - sed -i -e '/^PermitRootLogin/s/^.*$/PermitRootLogin no/' /etc/ssh/sshd_config
  - restart ssh
  - echo -e "\nDo not forget to set password with 'sudo passwd' and edit (with visudo -f) or remove /etc/sudoers.d/90-cloud-init-users file." >> /etc/motd
  - su - mshkrebtan -c "git clone https://github.com/mshkrebtan/profiles.git ~/.profiles"
  - su - mshkrebtan -c "~/.profiles/install.sh"
  - ln -s ~mshkrebtan/.profiles/ ~/
