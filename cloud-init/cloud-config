#cloud-config
users:
  - name: mshkrebtan
    ssh-authorized-keys:
      - ssh-rsa  mshkrebtan@MBA-Maxim
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    groups: sudo
    shell: /bin/bash
packages:
  - git
runcmd:
  - sed -i -e '/^PermitRootLogin/s/^.*$/PermitRootLogin no/' /etc/ssh/sshd_config
  - restart ssh
  - su - mshkrebtan -c "git clone https://github.com/mshkrebtan/profiles.git ~/.profiles"
  - su - mshkrebtan -c "~/.profiles/install.sh"
